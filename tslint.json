{
  "extends": [
    "tslint:latest",
    "tslint:recommended",
    "tslint-react",
    "tslint-plugin-prettier",
    "tslint-config-prettier"
  ],
  "rules": {
    "quotemark": [true, "single", "jsx-double"],
    "no-submodule-imports": false,
    "no-implicit-dependencies": false,
    "arrow-parens": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "member-ordering": false,
    "jsx-no-lambda": false,
    "no-console": true
  },
  "linterOptions": {
    "exclude": ["node_modules/**"]
  }
}
